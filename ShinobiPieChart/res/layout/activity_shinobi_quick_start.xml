<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
	    class="com.shinobicontrols.charts.ChartFragment"
	    android:id="@+id/chart"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />
   
    <TextView
		  android:layout_height="wrap_content"
		  android:layout_width="wrap_content"
		  android:id="@+id/txtcontract"
		  android:text="@string/contract"
		  android:textSize="10sp"
		  android:gravity="center_vertical|center_horizontal"  
		  android:layout_marginTop="500dp" 
		  android:paddingLeft="10dp"
		  android:textStyle="bold"/>
    
    <TextView
		  android:layout_height="wrap_content"
		  android:layout_width="wrap_content"
		  android:id="@+id/txtcontractVal"
		  android:gravity="center_vertical|center_horizontal"
		  android:layout_marginTop="2dp" 
		  android:layout_below="@+id/txtcontract"
		  android:textSize="20sp"
		  android:paddingLeft="10dp"/>
    
    <TextView
		  android:layout_height="wrap_content"
		  android:layout_width="wrap_content"
		  android:id="@+id/txtTotal"
		  android:text="@string/taccount"
		  android:textSize="10sp"
		  android:gravity="center_vertical|center_horizontal"  
		  android:layout_marginTop="500dp" 
		  android:layout_toRightOf="@+id/txtcontract"
		  android:paddingLeft="30dp"
		  android:textStyle="bold"/>
    
    <TextView
		  android:layout_height="wrap_content"
		  android:layout_width="wrap_content"
		  android:id="@+id/txtTotalAccount"
		  android:gravity="center_vertical|center_horizontal"
		  android:layout_marginTop="2dp" 
		  android:textSize="20sp"
		  android:layout_below="@+id/txtTotal"
		  android:layout_toRightOf="@+id/txtcontractVal"
		  android:paddingLeft="50dp"/>

    <Button
			android:id="@+id/btn_next"
			android:textColor="#000"
			android:textSize="20sp"
			android:text="@string/next"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginTop="500dp"
			android:layout_alignParentRight="true"
			/>

</RelativeLayout>
